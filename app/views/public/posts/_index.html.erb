<ul class="list-group">
  <% posts.each do |post| %>
    <% unless post.is_published == false && post.user != current_user %>
      <%= link_to post_path(post), class: "btn btn-light" do %>
        <li class="list-item d-flex">
          <div class="container py-1 px-0">
            <div class="d-flex mb-0">
              <div class="col-8 h5 text-left p-0"><%= post.title %></div>
              <div class="ml-auto">
                <small>
                  <%= image_tag post.user.get_profile_image(20,20), class: "rounded rounded-circle" %>
                  <%= post.user.name %>
                </small>
              </div>
            </div>
            <div class="d-flex small">
              <div class="col-9 text-left p-0">
                <p class="text-truncate"><%= post.body %></p>
              </div>
              <div class="ml-auto">
                <span class="small text-muted"><%= post.created_at.strftime("%m/%d/%y %H:%M") %></span>
              </div>
            </div>
          </div>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>
<% unless posts.any? %>
  <div class="text-center no-content my-5">
    <h5>No posts available</h5>
    <p><small>表示できる投稿がありません</small></p>
  </div>
<% end %>