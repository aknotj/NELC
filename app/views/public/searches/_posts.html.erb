<%= form_with url: search_path, method: :get, local: true do |f| %>
  <div class="form-group row mb-1">
    <label class="col-3">Keyword</label>
    <div class="col-9">
      <%= f.text_field :content, class: "form-control form-control-sm" %>
    </div>
  </div>

  <div class="form-group row mb-1">
    <label class="col-3">Language</label>
    <div class="col-9">
      <%= f.select :language,
                    options_for_select({"English" => "English",
                                        "Japanese" => "Japanese"}),
                                        {include_blank: "Select a language"},
                                        {class: "form-control form-control-sm"} %>
    </div>
  </div>
  <div class="actions text-right">
    <%= f.hidden_field :model, value: "Posts" %>
    <%= f.submit 'Search', class: "green border-0 rounded" %>
  </div>
<% end %>


