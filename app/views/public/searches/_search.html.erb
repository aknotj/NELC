<div class="d-none d-lg-block col-lg-2 bg-light">


<div class="bg-light p-2">
  <h4>Explor <small>検索</small></h4>
  <div class="user py-2 border-bottom">
    <h5>Users <small>ユーザー<ruby>検索<rt>けんさく</rt></ruby></small></h5>
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <div class="form-group row">
        <div class="col-3">
          <%= f.label :name %>
        </div>
        <div class="col-9">
          <%= f.text_field :name, autofocus: true, class: "form-control form-control-sm" %>
        </div>
      </div>

      <div class="form-group row mb-1">
        <div class="col-3">
          <%= f.label :speaks %>
        </div>
        <div class="col-12 col-sm-9">
          <%= f.select :language,
                        options_for_select({"English" => "English",
                                            "Japanese" => "Japanese"}),
                                            {include_blank: "Select a language"},
                                            {class: "form-control form-control-sm"} %>
        </div>
      </div>

      <div class="form-group row mb-1">
        <label class="col-3">Gender</label>
        <div class="col-9">
          <%= f.select :gender, options_for_select({"Male" => "male",
                                                    "Female" => "female",
                                                    "Other" => "other" }),
                                                  {include_blank: "Select a gender"},
                                                  {class: "form-control form-control-sm"} %>
        </div>
      </div>

      <div class="form-group row mb-1">
        <label class="col-md-3">Keyword</label>
        <div class="col-md-9">
          <%= f.text_field :content, class: "form-control form-control-sm" %>
        </div>
      </div>

      <div class="actions text-right">
        <%= f.hidden_field :model, value: "Users" %>
        <%= f.submit 'Search', class: "green border-0 rounded" %>
      </div>
    <% end %>
  </div>

  <div class="keyword py-2 border-bottom">
    <h5>Posts <small><ruby>投稿検索<rt>とうこうけんさく</rt></ruby></small></h5>
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <div class="form-group row mb-1">
        <label class="col-md-3">Keyword</label>
        <div class="col-md-9">
          <%= f.text_field :content, class: "form-control form-control-sm" %>
        </div>
      </div>

      <div class="form-group row mb-1">
        <label class="col-3">Language</label>
        <div class="col-9">
          <%= f.select :language,
                        options_for_select({"English" => "English",
                                            "Japanese" => "Japanese"}),
                                            {include_blank: "Select a language"},
                                            {class: "form-control form-control-sm"} %>
        </div>
      </div>

      <div class="actions text-right">
        <%= f.hidden_field :model, value: "Posts" %>
        <%= f.submit 'Search', class: "green border-0 rounded" %>
      </div>
    <% end %>


  </div>



</div>



</div>