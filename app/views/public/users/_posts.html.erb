  <div class="container">

        <div class="card post-card">
          <div class="card-body">
            <h5 class="card-title">Post title</h5>
            <p class="card-text text-truncate">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
            <p class="card-text text-right"><small class="text-muted">Last updated 3 mins ago</small></p>
          </div>
        </div>

      <div class="btn btn-outline-dark btn-block">
        <%= link_to "See all posts", user_posts_path(user), class: "btn-block" %>
      </div>
  </div>