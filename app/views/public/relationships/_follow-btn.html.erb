<% if user.followed_by?(current_user) %>
  <%= link_to "Unfollow", user_relationship_path(user.id), remote: true, method: :delete, class: "btn btn-sm btn-outline-dark" %>
<% elsif user != current_user %>
  <%= link_to "Follow", user_relationship_path(user.id), remote: true, method: :post, class: "btn btn-sm btn-outline-dark" %>
<% end %>
