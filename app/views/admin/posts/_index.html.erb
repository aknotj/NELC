<ul class="list-group list-unstyled">
  <% posts.each do |post| %>
    <%= link_to admin_post_path(post), class: "btn btn-light border-bottom" do %>
      <li class="list-item">
        <div class="container py-1 px-0">
          <div class="d-flex mb-0">
            <div class="col-7 h6 text-left text-truncate"><%= post.title %></div>
            <% if post.is_deleted? %>
              <div class="text-danger">
                <p>Deleted</p>
              </div>
            <% end %>
            <div class="ml-auto">
              <small>
                <%= image_tag post.user.get_profile_image(20,20), class: "rounded rounded-circle" %>
                <%= post.user.name %>
              </small>
            </div>
          </div>
          <div class="d-flex small">
            <div class="col-9 text-left">
              <p class="text-truncate"><%= post.body %></p>
            </div>
            <div class="ml-auto">
              <span class="small text-muted"><%= post.created_at.strftime("%m/%d/%y %H:%M") %></span>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  <% end %>
</ul>
<div class="row justify-content-center">
  <%= paginate posts %>
</div>