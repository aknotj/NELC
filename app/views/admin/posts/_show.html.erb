<div class="post-title">
  <div class="row heading mx-2">
    <h3 class="mr-3"><%= post.title %></h3>
    <div class="my-auto">
      by <%= link_to post.user.name, admin_user_path(post.user.id) %>
    </div>
    <% if post.is_deleted? %>
      <div class="ml-auto text-danger">
        <p>Deleted</p>
      </div>
    <% end %>
  </div>
  <hr class="my-0">
  <div class="row text-muted small m-2">
    <div class="col-8">
      Posted on <%= post.created_at.strftime("%Y%m/%d %H:%M") %><br>
      Categories:
      <% if post.categories.any? %>
        <% post.categories.each do |category| %>
         <span><%= category.name %> </span>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="container">
  <p class="text-break"><%=safe_join(post.body.split("\n"),tag(:br))%></p>
</div>

