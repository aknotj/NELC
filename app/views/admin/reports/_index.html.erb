<ul class="list-group">
  <li class="list-item d-flex small">
    <div class="col-1">No.</div>
    <div class="col-5 col-md-7">Subject</div>
    <div class="col-4 col-md-2">Reported on</div>
    <div class="col-1">Status</div>
  </li>
  <% reports.each do |report| %>
    <%= link_to admin_report_path(report), class: "btn btn-light border-bottom m-0 px-0" do %>
      <li class="list-item d-flex small">
        <div class="col-1 small"><%= report.id %></div>
        <div class="col-5 col-md-7 text-left small">
          <% if report.model == "user" %>
            <%= report.subject_user.name %>
          <% elsif report.model == "post" %>
            <%= report.post.title %>
          <% elsif report.model == "comment" %>
            Comment on <%= report.post.title %>
          <% end %>
        </div>
        <div class="col-4 col-md-2 text-left small"><%= report.created_at.strftime('%m/%d/%y %H:%M') %></div>
        <div class="col-1 small">
          <% if report.is_closed? %>
            <div class="text-danger">Closed</div>
          <% else %>
            Open
          <% end %>
        </div>
      </li>
    <% end %>
  <% end %>
</ul>
