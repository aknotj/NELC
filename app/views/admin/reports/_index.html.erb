<div class="container">
  <div class="row mb-2 border-bottom">
    <div class="col-1">Case</div>
    <div class="col-5">Subject</div>
    <div class="col-3">Reported on</div>
    <div class="col-2">Status</div>
  </div>
  <% reports.each do |report| %>
    <div class="row mb-2 small">
      <div class="col-1"><%= report.id %></div>
      <div class="col-5">
        <% if report.model == "user" %>
          <%= report.subject_user.name %>
        <% elsif report.model == "post" %>
          <%= report.post.title %>
        <% elsif report.model == "comment" %>
          Comment on <%= report.post.title %>
        <% end %>
      </div>
      <div class="col-3"><%= report.created_at.strftime('%m/%d/%y %H:%M') %></div>
      <div class="col-2">
        <% if report.is_closed? %>
          <div class="text-danger">Closed</div>
        <% else %>
          Open
        <% end %>
      </div>
      <div class="col-1"><%= link_to "Details", admin_report_path(report) %></div>
    </div>
  <% end %>
</div>