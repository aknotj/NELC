<div class="comment-details">
  <div class="row heading mx-2">
    <h3 class="mr-3">Comment</h3>
    <div class="text-align-middle">
      by <%= link_to post.user.name, admin_user_path(post.user.id) %>
    </div>
    <% if comment.is_deleted? %>
      <div class="ml-auto text-danger">
        <p>Deleted</p>
      </div>
    <% end %>
  </div>
  <hr class="my-0">
  <div class="row text-muted small m-2">
    <div class="mr-3">id: <%= comment.id %></div>
    <div>
      Comment posted on <%= comment.created_at.strftime("%Y/%m/%d %H:%M") %><br>
    </div>
  </div>
</div>

<div class="comment-content container">
  <p><%= comment.content %></p>
</div>

<div class="post-details container mt-5 col-10">
  Commented on post
  <div class="card container pt-2">
    <div class="d-flex">
      <div class="col-7 h6 text-left text-truncate">
        <%= link_to admin_post_path(post) do %>
          <%= post.title %>
        <% end %>
      </div>
      <% if post.is_deleted? %>
        <div class="text-danger">
          <p>Deleted</p>
        </div>
      <% end %>
      <div class="ml-auto">
        <small>
          by <%= link_to @post.user.name, admin_user_path(@post.user.id) %>
        </small>
      </div>
    </div>
    <div class="d-flex small">
      <div class="col-9 text-left">
        <p class="text-truncate"><%= post.body %></p>
      </div>
      <div class="ml-auto">
        <span class="small text-muted"><%= post.created_at.strftime("%m/%d/%y %H:%M") %></span>
      </div>
    </div>
  </div>
</div>
